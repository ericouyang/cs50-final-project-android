<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   	<style name="ListItem">
   	    <item name="android:layout_width">match_parent</item>
   	    <item name="android:layout_height">match_parent</item>
   	    <item name="android:orientation">vertical</item>
   	    <item name="android:paddingTop">20dp</item>
   	    <item name="android:paddingBottom">20dp</item>
   	</style>
   	
   	<style name="RecipeListItem" parent="ListItem">
   	     
   	</style>
   	
   	<style name="ListItemElement">
   	    <item name="android:layout_width">wrap_content</item>
   	    <item name="android:layout_height">wrap_content</item>
   	</style>
   	
   	<style name="RecipeListItem.UserName" parent="ListItemElement">
   	    <item name="android:paddingLeft">20dp</item>
   	     <item name="android:textSize">14sp</item>
   	     <item name="android:layout_alignParentLeft">true</item>
   	</style>
   	
   	<style name="RecipeListItem.CreatedAt" parent="ListItemElement">
   	    <item name="android:paddingRight">20dp</item>
   	    <item name="android:textSize">14sp</item>
   	    <item name="android:layout_alignParentRight">true</item>
   	</style>
   	
   	<style name="RecipeListItem.Image" parent="ListItemElement">
   	    <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_below">@id/recipe_list_item_created_at</item>
   	</style>
   	
   	<style name="RecipeListItem.Name" parent="ListItemElement">
   	     <item name="android:textSize">20sp</item>
   	     <item name="android:paddingLeft">20dp</item>
   	     <item name="android:paddingBottom">10dp</item>
   	</style>
   	
   	<style name="RecipeListItem.Noms" parent="ListItemElement">
   	     <item name="android:textSize">14sp</item>
   	     <item name="android:paddingLeft">20dp</item>
   	     <item name="android:layout_below">@id/recipe_list_item_name</item>
   	     <item name="android:layout_alignParentLeft">true</item>
   	</style>
   	
    <style name="RecipeListItem.Comments" parent="ListItemElement">
   	     <item name="android:textSize">14sp</item>
   	     <item name="android:paddingLeft">20dp</item>
   	     <item name="android:layout_below">@id/recipe_list_item_name</item>
   	     <item name="android:layout_toRightOf">@id/recipe_list_item_noms</item>
   	</style>
   	
   	<style name="ViewRecipeItem" parent="ListItem"> 
   	</style>
   	
   	<style name="ViewRecipeItemElement">
   	    
   	</style>
   	<style name="ViewRecipeItem.Image" parent="ViewRecipeItemElement">
   	    <item name="android:paddingTop">16dp</item>
   	    <item name="android:paddingBottom">16dp</item>
   	    <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_below">@id/recipe_list_item_created_at</item>
   	</style>

   	<style name="ViewRecipeItem.Name" parent="ViewRecipeItemElement">
   	     <item name="android:textSize">20sp</item>
   	     <item name="android:paddingTop">10dp</item>
   	     <item name="android:paddingLeft">20dp</item>
   	</style>
   	
   	<style name="ViewRecipeItem.UserName" parent="ListItemElement">
   	     <item name="android:textSize">16sp</item>
   	     <item name="android:paddingLeft">20dp</item>
   	     <item name="android:layout_below">@id/view_recipe_name</item>
   	</style>

   	<style name="ViewRecipeItem.CreatedAt" parent="ViewRecipeItemElement">
   	    <item name="android:textSize">16sp</item>
   	    <item name="android:paddingRight">20dp</item>
   	     <item name="android:layout_below">@id/view_recipe_image</item>
   	</style>
   	
   	<style name="ViewRecipeItem.Noms" parent="ViewRecipeItemElement">
   	    <item name="android:textSize">14sp</item>
   	    <item name="android:paddingLeft">20dp</item>
   	     <item name="android:layout_below">@id/view_recipe_created_at</item>
   	</style>
   	
   	<style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
    </style>
   	
</resources>
